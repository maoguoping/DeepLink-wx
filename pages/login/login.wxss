/* pages/login/login.wxss */
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.login-box {
  width: 700rpx;
  height: 500rpx;
  border-color: #eee;
  border-style: solid;
  border-radius: 10rpx;
  border-width: 1px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login-logo {
  width: 200rpx;
  height: 200rpx;
}
vant-cell {
  display: inline-block;
  border: 1px solid #eee !important;
  height: 40rpx !important;
  line-height: 40rpx !important;
}
.login-btn {
  width: 650rpx !important;
}